<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".BookDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_height="@dimen/app_bar_height"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:expandedTitleTextAppearance="@style/CollapsingToolbarTitleStyle.About"
                app:statusBarScrim="@android:color/transparent"
                app:titleEnabled="false"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"
                       android:id="@+id/bg_shape"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/book_bg"
                        app:riv_corner_radius="4dp"
                        android:layout_width="100dp"
                        android:layout_height="125dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                <TextView android:id="@+id/bookName"
                          android:text="斗破苍穹asdfaegasef"
                          android:textSize="16sp"
                          android:textColor="@color/white"
                          app:layout_constraintStart_toEndOf="@+id/book_bg"
                          app:layout_constraintTop_toTopOf="@+id/book_bg"
                          android:layout_marginStart="6dp"
                          android:layout_marginTop="8dp"
                          android:gravity="center_vertical"
                          android:maxWidth="150dp"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <TextView android:id="@+id/booklastUpdateChapter"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:textColor="@color/white"
                          android:textSize="14sp"
                          android:layout_marginTop="4dp"
                          app:layout_constraintTop_toBottomOf="@+id/bookName"
                          app:layout_constraintStart_toStartOf="@+id/bookName"
                          android:text="最新：大结局"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:layout_centerVertical="true"/>

                <TextView android:id="@+id/bookauthor"
                          android:text="天蚕土豆"
                          android:maxWidth="100dp"
                          android:maxLines="1"
                          android:textSize="14sp"
                          android:textColor="@color/white"
                          android:layout_marginTop="4dp"
                          app:layout_constraintTop_toBottomOf="@+id/booklastUpdateChapter"
                          app:layout_constraintStart_toStartOf="@+id/bookName"
                          android:ellipsize="end"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <TextView android:id="@+id/booklastUpdateTime"
                          android:text="2018.11.1"
                          android:textSize="12sp"
                          android:textColor="@color/white"
                          android:layout_marginTop="4dp"
                          app:layout_constraintTop_toBottomOf="@+id/bookauthor"
                          app:layout_constraintStart_toStartOf="@+id/bookName"
                          android:layout_width="wrap_content"
                          android:maxWidth="130dp"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:layout_height="wrap_content"/>

                <TextView android:id="@+id/booksite"
                          android:text="笔趣阁"
                          android:maxLines="1"
                          android:textSize="12sp"
                          android:textColor="@color/white"
                          app:layout_constraintTop_toBottomOf="@+id/booklastUpdateTime"
                          app:layout_constraintStart_toStartOf="@+id/bookName"
                          android:layout_marginTop="4dp"
                          android:maxWidth="100dp"
                          android:ellipsize="end"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/book_bg"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintEnd_toStartOf="@+id/catalogintro"
                          android:text="简介:"
                          android:textColor="@color/white"
                          android:textSize="14sp"
                          android:layout_marginStart="16dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/tv_intro"
                          android:layout_height="wrap_content" app:layout_constraintVertical_bias="0.0"/>
                <TextView
                        android:id="@+id/catalogintro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/tv_intro"
                        app:layout_constraintTop_toTopOf="@+id/tv_intro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="正在加载简介"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text=""
                        app:layout_constraintVertical_bias="0.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    app:contentInsetStart="0.0dp"
                    app:title=" "
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@mipmap/ic_action_arrow_left"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:titleTextAppearance="@style/Toolbar.TitleText"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/catalog_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_gravity="bottom"
                                       android:background="@color/white"
                                       android:elevation="4dp"
                                       app:contentInsetStart="0dp"
                                       android:layout_height="55dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/sort"
                       android:src="@mipmap/ic_action_arrow_bottom"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/add"
                       app:layout_constraintStart_toStartOf="parent"/>

            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/sort"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="@+id/sort"
                      app:layout_constraintEnd_toEndOf="@+id/sort"
                      android:text="倒序"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>


            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/add"
                       android:src="@mipmap/ic_action_add"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/read"
                       app:layout_constraintStart_toEndOf="@+id/sort"/>

            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/add"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="@+id/add"
                      app:layout_constraintEnd_toEndOf="@+id/add"
                      android:text="加入书架"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/read"
                       android:src="@mipmap/ic_action_book"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/dowland"
                       app:layout_constraintStart_toEndOf="@+id/add"/>

            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/read"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="@+id/read"
                      app:layout_constraintEnd_toEndOf="@+id/read"
                      android:text="立即阅读"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/dowland"
                       android:src="@mipmap/ic_action_download"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/read"
                       app:layout_constraintEnd_toEndOf="parent"/>

            <TextView android:layout_width="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/dowland"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="@+id/dowland"
                      app:layout_constraintEnd_toEndOf="@+id/dowland"
                      android:text="缓存"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


</androidx.coordinatorlayout.widget.CoordinatorLayout>