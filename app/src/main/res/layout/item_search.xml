<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/item_book_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:focusable="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundImageView"
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"/>

        <TextView android:id="@+id/item_book_name"
                  android:text="斗破苍穹"
                  android:textSize="16sp"
                  android:layout_marginStart="6dp"
                  android:layout_toEndOf="@+id/roundImageView"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="8dp"
                  android:gravity="center"
                  android:maxWidth="100dp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_book_lastUpdateTime"
                  android:text="最后更新：2018.11.1"
                  android:layout_width="wrap_content"
                  android:textSize="12sp"
                  android:maxWidth="160dp"
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:layout_toRightOf="@+id/item_book_name"
                  android:layout_marginEnd="12dp"
                  android:layout_alignTop="@+id/item_book_name"
                  android:layout_alignBottom="@+id/item_book_name"
                  android:layout_alignParentEnd="true"
                  android:gravity="end|center_vertical"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_book_lastUpdateChapter"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:layout_below="@+id/item_book_name"
                  android:text="最新：大结局"
                  android:layout_marginEnd="12dp"
                  android:textSize="14sp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_alignStart="@+id/item_book_name"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_marginBottom="4dp"
                      android:layout_marginEnd="12dp"
                      android:layout_alignStart="@+id/item_book_name"
                      android:orientation="horizontal"
                      android:layout_alignParentBottom="true">


            <TextView android:id="@+id/item_book_author"
                      android:text="天蚕土豆"
                      android:maxWidth="200dp"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:textSize="12sp"
                      android:gravity="center_vertical"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"/>

            <TextView android:id="@+id/item_book_site"
                      android:text="笔趣阁"
                      android:maxLines="1"
                      android:padding="2dp"
                      android:textSize="12sp"
                      android:layout_marginStart="20dp"
                      android:gravity="end|bottom"
                      android:maxWidth="100dp"
                      android:ellipsize="end"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>